.search-form.main-search-container
  .form-group
    label From
    input.form-control#origin(
      placeholder="Address, Station Etc."
      ng-model="query.from"
      required=""
      gmap-autocomplete=""
      ng-class="{'error': form.from}"
      )


  .form-group.floating-label
    label To
    input.form-control#destination(
      placeholder="Address, Station Etc."
      ng-model="query.to"
      required=""
      ng-enter="search()"
      gmap-autocomplete=""
      ng-class="{'error': form.to}"
      )

  .form-group.floating-label
    label Date/Time
    .row
      .col-md-9
        input.form-control.date-picker date-picker=""  ng-model="query.departure_time" required=""
      .col-md-3.time-picker-group
        input.form-control timepicker="" ng-model="query.time" required="" placeholder="Time"
