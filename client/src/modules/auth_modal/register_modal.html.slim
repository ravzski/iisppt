.modal-dialog.auth-modal.reg-modal
  .modal-header
    a.btn-close ng-click="toggleRegister()" Ã—
    h4 Sign up for an account

  .modal-body
    form name="form"

      .form-group
        label First Name
        input.form-control(
          type="text"
          name="first_name"
          ng-model="user.first_name"
          required=""
          ng-enter="submit(form)"
          placeholder="First Name"
          ng-class="{error: form.first_name.$error.required && form.$submitted}")

      .form-group
        label Last Name
        input.form-control(
          type="text"
          name="last_name"
          ng-model="user.last_name"
          required=""
          ng-enter="submit(form)"
          placeholder="Last Name"
          ng-class="{error: form.last_name.$error.required && form.$submitted}")


      .form-group
        label Email
        input.form-control(
          type="email"
          name="email"
          ng-model="user.email"
          required=""
          ng-enter="submit(form)"
          placeholder="Email"
          ng-class="{error: (form.email.$error.required && form.$submitted) || emailErr}")


      .form-group
        label Mobile Number
        input.form-control(
          type="text"
          name="mobile_number"
          ng-model="user.mobile_number"
          ng-enter="register(form)"
          placeholder="Mobile number")

      .form-group
        label Password
        input.form-control(
          type="password"
          name="password"
          ng-model="user.password"
          required=""
          ng-enter="submit(form)"
          placeholder="Password"
          ng-class="{error: (form.password.$error.required && form.$submitted) || passwordErr}")

      .form-group
        label Confirm Password
        input.form-control(
          type="password"
          name="confirm_password"
          ng-model="user.confirm_password"
          required=""
          ng-enter="register(form)"
          placeholder="Password"
          ng-class="{error: (form.confirm_password.$error.required && form.$submitted) || passwordErr}")


  .modal-footer
    .row
      .col-md-8
        a.left-label ng-click="toggleModal('login')" Already a Member?
      .col-md-4
        a.btn.btn-primary.btn-block ng-click="register(form)" ng-class="{'disable': disabledSubmit}" Sign Up
